rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidAudioFile() {
      return request.resource.size < 50 * 1024 * 1024 && // 50MB max
             request.resource.contentType.matches('audio/.*');
    }
    
    function hasValidMetadata() {
      return request.resource.metadata.keys().hasAll(['userId', 'latitude', 'longitude', 'timestamp']);
    }
    
    // Voice notes - only owner can access
    match /voice_notes/{userId}/{noteId} {
      // Allow user to upload their own voice notes
      allow create: if isOwner(userId) && 
                      isValidAudioFile() && 
                      hasValidMetadata();
      
      // Allow user to read their own voice notes
      allow read: if isOwner(userId);
      
      // Allow user to delete their own voice notes
      allow delete: if isOwner(userId);
      
      // No updates allowed (voice notes are immutable)
      allow update: if false;
    }
    
    // Patient attachments (photos, documents)
    match /patients/{patientId}/attachments/{attachmentId} {
      allow read, write: if isAuthenticated() && 
                           request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // CHW profile photos
    match /chw_profiles/{userId}/photo {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && 
                     request.resource.size < 5 * 1024 * 1024 && // 5MB max
                     request.resource.contentType.matches('image/.*');
    }
    
    // Public assets (read-only)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
