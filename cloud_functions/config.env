# Google Cloud Platform Configuration for iLuminara-Core
# Humanitarian Constraint Encoding System
# ═════════════════════════════════════════════════════════════════════════════

# Project Configuration
GCP_PROJECT_ID=iluminara-core
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Vertex AI Configuration
VERTEX_AI_REGION=us-central1
VERTEX_AI_MODEL_ENDPOINT=projects/iluminara-core/locations/us-central1/endpoints

# Cloud Functions Configuration
CLOUD_FUNCTIONS_REGION=us-central1
CLOUD_FUNCTIONS_RUNTIME=python310
CLOUD_FUNCTIONS_MEMORY=256MB
CLOUD_FUNCTIONS_TIMEOUT=60s

# Secret Manager Configuration
SECRET_MANAGER_PROJECT=iluminara-core
SECRET_MANAGER_REPLICATION=automatic

# Service Account
SERVICE_ACCOUNT_EMAIL=iluminara-humanitarian@iluminara-core.iam.gserviceaccount.com

# IAM Roles Required:
# - roles/aiplatform.user (Vertex AI)
# - roles/cloudfunctions.developer (Cloud Functions)
# - roles/secretmanager.admin (Secret Manager)
# - roles/iam.serviceAccountUser (Service Account)

# Humanitarian Protocols Storage
PROTOCOLS_SECRET_PREFIX=humanitarian-protocol
PROTOCOLS_VERSION=latest

# Monitoring & Logging
ENABLE_CLOUD_LOGGING=true
ENABLE_CLOUD_MONITORING=true
LOG_LEVEL=INFO

# Compliance & Audit
AUDIT_LOG_RETENTION_DAYS=2555
COMPLIANCE_FRAMEWORKS=GDPR,HIPAA,KDPA,POPIA,EU_AI_ACT
